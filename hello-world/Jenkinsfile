pipeline {
    agent any

    environment {
        // Define the path to the ModelSim installation
        MODELSIM_HOME = 'C:\\modeltech64_10.6d\\win64'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from your GitHub repository
                git 'https://github.com/MNMenendez/QTMP_VCU.git'
            }
        }

        stage('Setup') {
            steps {
                // Optionally, set up environment variables if needed
                echo "ModelSim Home: ${env.MODELSIM_HOME}"
            }
        }

        stage('Compile') {
            steps {
                script {
                    // Run ModelSim's `vlib` and `vcom` commands to compile VHDL code
                    bat """
                    "%MODELSIM_HOME%\\vsim.exe" -c -do "vlib work; vcom -2008 and_gate.vhdl and_gate_tb.vhdl"
                    """
                }
            }
        }

        stage('Run Simulation') {
            steps {
                script {
                    // Run the simulation and check the results
                    bat """
                    "%MODELSIM_HOME%\\vsim.exe" -c -do "run -all; quit"
                    """
                }
            }
        }

        stage('Archive Results') {
            steps {
                // Archive the results, if any
                archiveArtifacts artifacts: '**/test_results.log', allowEmptyArchive: true
            }
        }
    }

    post {
        always {
            // Clean up or notify
            echo 'Cleaning up...'
        }
        success {
            echo 'Tests passed successfully!'
        }
        failure {
            echo 'Tests failed. Please check the logs.'
        }
    }
}
