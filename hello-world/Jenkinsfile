pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from your repository
                git 'https://github.com/yourusername/yourrepository.git'
            }
        }

        stage('Setup') {
            steps {
                // Setup the environment; ensure ModelSim is installed
                script {
                    // Set environment variables if needed
                    env.MODELSIM_HOME = '/path/to/modelsim'
                }
            }
        }

        stage('Compile') {
            steps {
                script {
                    // Run ModelSim's `vlib` and `vcom` commands to compile VHDL code
                    bat """
                    %MODELSIM_HOME%\\bin\\vsim -c -do "vlib work; vcom -2008 and_gate.vhdl and_gate_tb.vhdl"
                    """
                }
            }
        }

        stage('Run Simulation') {
            steps {
                script {
                    // Run the simulation and check the results
                    bat """
                    %MODELSIM_HOME%\\bin\\vsim -c -do "run -all; quit"
                    """
                }
            }
        }

        stage('Archive Results') {
            steps {
                // Archive the results, if any
                archiveArtifacts artifacts: '**/test_results.log', allowEmptyArchive: true
            }
        }
    }

    post {
        always {
            // Clean up or notify
            echo 'Cleaning up...'
        }
        success {
            echo 'Tests passed successfully!'
        }
        failure {
            echo 'Tests failed. Please check the logs.'
        }
    }
}
